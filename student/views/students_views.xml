<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.form</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <form string="student">
                    <header>
                        <button name="action_confirm" string="Fees Paid" class="btn-primary" type="object" groups="student.group_student_user"/>
                        <field name="Stage" widget="statusbar" statusbar_visible="fees_not_paid,fees_paid"/>
                       
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="Stage"/>
                                <field name="Roll_no"/>
                                <field name="mobile_no"/>
                                <field name="mobile" />
                            </group>
                            <group>
                                <field name="student_class"/>
                                <field name="Section"/>
                                <field name="Is_active"/>
                                <field name="fees_Paid_month"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_student_list" model="ir.ui.view">
            <field name="name">student.list</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="Roll_no"/>
                    <field name="mobile_no"/>
                    <field name="mobile" />
                    <field name="student_class"/>
                    <field name="Section"/>
                    <field name="Is_active"/>
                </tree>
            </field>
        </record>
        <record id="view_student_search" model="ir.ui.view">
            <field name="name">student.search</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <search string="student">
                    <field name="name" string="Name"/>
                    <field string="mobile_no" name="mobile_no" />
                    <field name="mobile" />
                    <separator/>
                    <group string="Group By">
                        <filter string="Class" name="student_class" domain="" context="{'group_by':'name'}"/>
                        <filter string="Section" name="Section" domain="" context="{'group_by':'mobile_no'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">student</field>
            <field name="res_model">student</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>